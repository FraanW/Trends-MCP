{
  "mcpServers": {
    "Whats Trending On Social Media": {
      "command": "/Users/<username>/.local/bin/uv",
      "args": [
        "--directory",
        "/Users/<username>/Documents/trending_mcp",
        "run",
        "--with",
        "mcp[cli]",
        "--with",
        "fastmcp",
        "--with",
        "youtube-comment-downloader",
        "--with",
        "yt_dlp",
        "--with",
        "beautifulsoup4",
        "--with",
        "requests",
        "mcp",
        "run",
        "server.py"
      ],
      "env":{
        "tiktok": "<tiktok token goes here>"
    }
    }
  }
}
